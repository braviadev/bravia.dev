{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"],
      "content-collections": ["./.content-collections/generated"]
    }
  },
  "extends": "@bravia/typescript-config/nextjs.json",
  "exclude": ["node_modules"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "postcss.config.mjs",
    "prettier.config.js"
  ]
}
